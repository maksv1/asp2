@{
    ViewData["Title"] = "Главная страница";
}

<div class="container mt-4">
    <div class="banner mb-5">
        <div class="card bg-dark text-white">
            <img class="card-img" src="~/images/banner/banner-speaker.png" alt="Iphone">
            <div class="card-img-overlay d-flex flex-column justify-content-center">
                <h5 class="card-title">Iphone</h5>
                <p class="card-text text-warning">СКИДКА 20% <br /> при покупке второго товара</p>
            </div>
        </div>
    </div>

    <div class="catalog">
        <h4>Каталог</h4>
        <div class="row text-center mt-3">
            <div class="col">
                <a href="/smartphones">
                    <img src="~/images/katalog/smartphone.png" alt="Смартфоны" class="img-fluid catalog-icon">
                    <p>Смартфоны</p>
                </a>
            </div>
            <div class="col">
                <a href="/headphones">
                    <img src="~/images/katalog/headphones.png" alt="Наушники" class="img-fluid catalog-icon">
                    <p>Наушники</p>
                </a>
            </div>
            <div class="col">
                <a href="/chargers">
                    <img src="~/images/katalog/charger.jpg" alt="Зарядные устройства" class="img-fluid catalog-icon">
                    <p>Зарядные устройства</p>
                </a>
            </div>
            <div class="col">
                <a href="/covers">
                    <img src="~/images/katalog/covers.jpg" alt="Чехлы" class="img-fluid catalog-icon">
                    <p>Чехлы</p>
                </a>
            </div>
            <div class="col">
                <a href="/selfiesticks">
                    <img src="~/images/katalog/selfi.jpg" alt="Селфи палки" class="img-fluid catalog-icon">
                    <p>Селфи палки</p>
                </a>
            </div>
            <div class="col">
                <a href="/speakers">
                    <img src="~/images/katalog/speaker.jpg" alt="Колонки" class="img-fluid catalog-icon">
                    <p>Колонки</p>
                </a>
            </div>
        </div>
    </div>



    <!-- Раздел Акции -->
    <div class="promotions mt-5">
        <h4>Акции</h4>
        <div class="row">
            <!-- Пример карточки товара -->
            <div class="col-md-4 col-lg-3 mb-4">
                <div class="card position-relative">
                    <img src="~/images/stock/iphone14.jpg" class="card-img-top" alt="Смартфон Apple iPhone 14 128GB">
                    <div class="card-body text-center">
                        <h6 class="card-title">Смартфон Apple iPhone 14 128GB</h6>
                        <p><s>87,999 ₽</s> <span class="text-danger">84,999 ₽</span> <span class="badge badge-warning">-4%</span></p>
                        <button class="btn btn-primary">В корзину</button>
                    </div>

                    <!-- Кнопка троеточие -->
                    <button class="btn btn-light btn-sm position-absolute" style="top: 10px; right: 10px;" onclick="openSpecsModal(1)">
                        &#x22EE;
                    </button>
                </div>
            </div>

            <div class="col-md-4 col-lg-3 mb-4">
                <div class="card position-relative">
                    <img src="~/images/stock/iphone15.jpg" class="card-img-top" alt="Смартфон Apple iPhone 15 128GB Black">
                    <div class="card-body text-center">
                        <h6 class="card-title">Смартфон Apple iPhone 15 128GB Black</h6>
                        <p><s>87 000 ₽</s> <span class="text-danger">70 191 ₽</span> <span class="badge badge-warning">-4%</span></p>
                        <button class="btn btn-primary">В корзину</button>
                    </div>

                    <!-- Кнопка троеточие -->
                    <button class="btn btn-light btn-sm position-absolute" style="top: 10px; right: 10px;" onclick="openSpecsModal(2)">
                        &#x22EE;
                    </button>
                </div>
            </div>

            <!-- Модальное окно -->
            <div class="modal fade" id="productSpecsModal" tabindex="-1" role="dialog" aria-labelledby="productSpecsModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <!-- Заголовок модального окна -->
                        <div class="modal-header">
                            <h5 class="modal-title" id="productSpecsModalLabel">Характеристики товара</h5>
                            <button type="button" class="close" onclick="closeModal()" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>

                        <!-- Тело модального окна -->
                        <div class="modal-body">
                            <dl class="dl-horizontal">
                                <dt>Название модели:</dt>
                                <dd id="modalProductName">Загрузка...</dd>

                                <dt>Производитель:</dt>
                                <dd id="modalProductCompany">Загрузка...</dd>

                                <dt>Год выпуска:</dt>
                                <dd id="modalProductYear">Загрузка...</dd>

                                <dt>Объем памяти:</dt>
                                <dd id="modalProductMemory">Загрузка...</dd>

                                <dt>Цена:</dt>
                                <dd id="modalProductPrice">Загрузка...</dd>
                            </dl>
                        </div>

                        <!-- Подвал модального окна -->
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" onclick="closeModal()" data-dismiss="modal">Закрыть</button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4 col-lg-3 mb-4">
                <div class="card position-relative">
                    <img src="~/images/stock/samsung_s23_ultra.png"
                         class="card-img-top img-fluid"
                         alt="Смартфон Samsung Galaxy S23 Ultra 12/512 ГБ"
                         style="object-fit: cover; width: 100%; height: auto;">
                    <div class="card-body text-center">
                        <h6 class="card-title">Смартфон Samsung Galaxy S23 Ultra 12/512 ГБ</h6>
                        <p><s>95,000 ₽</s> <span class="text-danger">90,000 ₽</span> <span class="badge badge-warning">-5%</span></p>
                        <button class="btn btn-primary">В корзину</button>
                    </div>

                    <!-- Кнопка троеточие -->
                    <button class="btn btn-light btn-sm position-absolute" style="top: 10px; right: 10px;" onclick="openSpecsModal(3)">
                        &#x22EE;
                    </button>
                </div>
            </div>
        </div>
    </div>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="~/js/site.js"></script>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
</div>
